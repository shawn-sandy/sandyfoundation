{% extends "_Layout.njk" %}
{% block head %}
  {{ super() }}
{% endblock %}
{% block content %}
  <main style="padding-top: calc(100rem / 16)">
    <section>
      {# -------------- #}
      <article>
        {% if title %}
          <h2 role="presentation ">{{ title }}</h2>
          {% if showDate %}
            <time datetime="{{ page.date }}">
              <i class="ti ti-calendar-event"></i>
              {{ hlp.11ty.timeAgo(page.date) }}
            </time>
          {% endif %}
        {% endif %}
        <p>
          {{ content | safe }}
        </p>
      </article>
    </section>
    <aside>
      {# <hr /> #}
      {% include "partials/sidebar.njk" %}
    </aside>
  </main>
{% endblock %}
{% block footer %}
  {{ super() }}
{% endblock %}
